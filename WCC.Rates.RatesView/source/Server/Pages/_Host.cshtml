@page "/"
@namespace WCC.Rates.RatesView.Pages
@using WCC.Rates.RatesView.Client
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, NetEscapades.AspNetCore.SecurityHeaders.TagHelpers
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
    <title>Rates View</title>
    <base href="~/" />
    <link rel="stylesheet" href="css/bootstrap/bootstrap.min.css" />
    <link href="css/app.css" rel="stylesheet" />
    <link href="WCC.Rates.RatesView.Client.styles.css" rel="stylesheet" />
    <link href="manifest.json" rel="manifest" />
    <link rel="apple-touch-icon" sizes="512x512" href="icon-512.png" />
</head>
<body>


    <div id="app">
        <div class="spinner d-flex align-items-center justify-content-center spinner">
            <div class="spinner-border text-primary" role="status">
               
            </div>
        </div>
    </div>

    <div id="blazor-error-ui">
        <environment include="Staging,Production">
            An error has occurred. This application may no longer respond until reloaded.
        </environment>
        <environment include="Development">
            An unhandled exception has occurred. See browser dev tools for details.
        </environment>
        <a href="" class="reload">Reload</a>
        <a class="dismiss">🗙</a>
    </div>

    <script asp-add-nonce src="_framework/blazor.webassembly.js"></script>
    <script asp-add-nonce src="css/bootstrap/bootstrap.min.js"></script>
    <script asp-add-nonce src="_content/Microsoft.FluentUI.AspNetCore.Components-v4.5.0.min.js" type="module" async></script>
    <script asp-add-nonce src="antiForgeryToken.js" ></script>
    <script asp-add-nonce src="_content.Microsoft.Authentication.WebAssembly.Msal/AuthenticationSerice.js"></script>
    @Html.AntiForgeryToken()
</body>
</html>
